<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextOutlineView">
        <attr name="textStroke" format="boolean"/>
        <attr name="textStrokeWidth" format="float"/>
        <attr name="textStrokeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ModooSearchView">
        <attr name="searchBackground" format="integer" />
        <attr name="searchVoiceIcon" format="integer" />
        <attr name="searchCloseIcon" format="integer" />
        <attr name="searchBackIcon" format="integer" />
        <attr name="searchSuggestionBackground" format="integer" />
        <attr name="historyIcon" format="integer" />
        <attr name="suggestionIcon" format="integer" />
        <attr name="listTextColor" format="integer" />
        <attr name="searchBarHeight" format="dimension" />
        <attr name="voiceHintPrompt" format="string" />
        <attr name="voiceIconEnabled" format="boolean" />
        <attr name="android:fitsSystemWindows" />
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="android:textColorHint" />
        <attr name="android:inputType" />
    </declare-styleable>

    <declare-styleable name="SwipeItemLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />

        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>
</resources>