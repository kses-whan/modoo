<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="PREF_AUTO_UPDATE"
        android:title="@string/auto_update_prompt"
        android:summary="@string/auto_update_prompt"
        android:defaultValue="true"/>
    <ListPreference
        android:key="PREF_UPDATE_FREQ"
        android:title="@string/update_freq_prompt"
        android:summary="@string/update_freq_prompt"
        android:entries="@array/update_freq_options"
        android:entryValues="@array/update_freq_values"
        android:dialogTitle="@string/update_freq_prompt"
        android:defaultValue="60"/>
    <ListPreference
        android:key="PREF_PRICES"
        android:title="@string/min_price_prompt"
        android:summary="@string/min_price_prompt"
        android:entries="@array/price_options"
        android:entryValues="@array/price_values"
        android:dialogTitle="@string/min_price_prompt"
        android:defaultValue="0"/>
</PreferenceScreen>
